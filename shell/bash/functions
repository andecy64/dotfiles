get_platform () {
    echo "$(uname -a | cut -d ' ' -f 1)";
}    

repo-sync () {
    local repopath=$1
    git -C $repopath pull origin master
    git -C $repopath commit -am "Sync"
    git -C $repopath push origin master
}

source-completion () {
    for completion in ~/.bash_completion.d/* ; do
        . $completion
    done
}
