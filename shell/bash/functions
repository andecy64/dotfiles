get_platform () {
    echo "$(uname -a | cut -d ' ' -f 1)";
}    

task-sync () {
    git -C $TASKWARRIOR_DATA_DIR pull origin master
    git -C $TASKWARRIOR_DATA_DIR commit -am "DB Update"
    git -C $TASKWARRIOR_DATA_DIR push origin master
}

source-completion () {
    for completion in ~/.bash_completion.d/* ; do
        . $completion
    done
}

sync-overlay-with-msg () {
    local args="$@"
    if [[ -z ${args} ]]
    then
            echo "Please give git a commit message" 
    else
            pushd ${HOME}/.overlay && git add . && git commit -m "${args}" && git push origin master && popd
            sudo layman -S
    fi
}
